<resources>

    <style name="TabTextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_grey_color</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabMaxWidth">128dp</item>
        <item name="tabIndicatorColor">@color/selected_color</item>
        <item name="tabIndicatorHeight">1.6dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/selected_color</item>
    </style>

    <style name="Widget.Design.TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

</resources>
